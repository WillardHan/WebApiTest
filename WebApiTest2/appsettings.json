{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "Logs/webapitest2-rollingfile.log",
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Warning"
          //"rollingInterval": "Day"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "indexFormat": "webapitest2-{0:yyyy.MM.dd}",
          "templateName": "serilog-events-template",
          "typeName": "logevent",
          "batchPostingLimit": 50,
          "period": 2,
          "inlineFields": true,
          "minimumLogEventLevel": "Information",
          "bufferBaseFilename": "Logs/webapitest2-elasticsearch-buffer",
          "bufferFileSizeLimitBytes": null,
          "bufferLogShippingInterval": 5000,
          "connectionGlobalHeaders": null,
          "connectionTimeout": 5,
          "emitEventFailure": "WriteToSelfLog",
          "queueSizeLimit": 100000,
          "pipelineName": null,
          "autoRegisterTemplate": false,
          "autoRegisterTemplateVersion": "ESv5",
          "overwriteTemplate": false,
          "registerTemplateFailure": "IndexAnyway",
          "deadLetterIndexName": "deadletter-{0:yyyy.MM}",
          "numberOfShards": 20,
          "numberOfReplicas": 10
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionString": "Server=192.168.11.100;Database=WebApiTest2;User ID=sa;Password=sa.123"
}
